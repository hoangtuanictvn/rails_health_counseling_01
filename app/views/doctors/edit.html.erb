<main>

  <div id="hero_register">
    <div class="container margin_120_95">
      <div class="row">
        <div class="col-lg-10 offset-md-1">
          <div class="box_form">
            <%= form_for @doctor do |f| %>
              <div class="row">
                <div class="col-md-6">
                  <div class="form-group">
                    <%= f.text_field :name,
                      class: "form-control",
                      placeholder: t(".name"), value: @doctor.name %>
                  </div>
                </div>
                <div class="col-md-6">
                  <div class="form-group">
                    <%= f.text_field :email, class: "form-control",
                      placeholder: t(".email"), value: @doctor.email %>
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="col-md-6">
                  <div class="form-group">
                    <%= f.text_field :phone_number, type: :number,
                      class: "form-control", placeholder: t(".phone"),
                      value: @doctor.phone_number %>
                  </div>
                </div>
                <div class="col-md-6">
                  <div class="form-group">
                    <%= f.text_field :address,
                      class: "form-control", placeholder: t(".address"),
                      value: @doctor.address %>
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="col-md-12">
                  <div class="form-group">
                    <%= f.text_field :prof_position,
                      class: "form-control", placeholder: t(".position"),
                      value: @doctor.prof_position %>
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="col-lg-12">
                  <div class="form-group">
                    <%= f.text_field :prof_place,
                      class: "form-control", placeholder: t(".place"),
                      value: @doctor.prof_place %>
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="col-md-12">
                  <div class="form-group">
                    <%= f.text_area :bio,
                      class: "form-control", placeholder: t(".bio"),
                      value: @doctor.bio %>
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="col-md-12">
                  <div class="form-group">
                    <%= f.label :major, t(".major") %>
                    <%= f.select :majors,
                      options_for_select(@all_majors, @current_majors),
                      {}, {multiple: true, id: "select-major"} %>
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="col-md-6">
                  <div class="form-group">
                    <%= f.label :identity_card, t(".identity") %>
                    <%= f.file_field :identity_card,
                      class: "form-control",
                      accept: "image/jpeg,image/gif,image/png" %>
                  </div>
                </div>
                <div class="col-md-6">
                  <div class="form-group">
                    <%= f.label :license, t(".license") %>
                    <%= f.file_field :license, class: "form-control",
                      accept: "image/jpeg,image/gif,image/png" %>
                  </div>
                </div>
              </div>
              <div class="form-group text-center add_top_30">
                <%= f.submit t(".submit"), class: "btn_1" %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>
