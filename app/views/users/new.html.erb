<%= provide :title, t(".signup") %>
<main>
  <div class="bg_color_2">
    <div class="container margin_60_35">
      <div id="register">
        <h1><%= t ".title" %></h1>
        <div class="row justify-content-center">
          <div class="col-md-5">
            <%= form_for @user do |f| %>
              <div class="box_form">
                <div class="form-group">
                  <%= f.label :name, t(".name") %>
                  <%= f.text_field :name, class: "form-control",
                    placeholder: t(".your_name") %>
                </div>
                <% if @user.errors[:name].present? %>
                  <div><%= @user.errors[:name][0] %></div>
                <% end %>
                <div class="form-group">
                  <%= f.label :email, t(".email") %>
                  <%= f.email_field :email, class: "form-control",
                    placeholder: t(".your_email") %>
                </div>
                <div class="form-group">
                  <%= f.label :password, t(".password") %>
                  <%= f.password_field :password, class: "form-control",
                    placeholder: t(".your_password") %>
                </div>
                <div class="form-group">
                  <%= f.label :password_confirmation, t(".password_confirm") %>
                  <%= f.password_field :password_confirmation,
                    class: "form-control",
                    placeholder: t(".password_confirm") %>
                </div>
                <div class="form-group">
                  <%= f.label :request_doctor, class: "inline" do %>
                    <%= f.check_box :request_doctor %>
                    <strong><%= t ".request_doctor" %></strong>
                  <% end %>
                </div>
                <div class="form-group text-center add_top_30">
                  <%= f.submit t(".submit"), class: "btn_1" %>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>
