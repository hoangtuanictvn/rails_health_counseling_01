<%= provide :title, t("sessions.new.login") %>
<main>
  <div class="bg_color_2">
    <div class="container margin_60_35">
      <div id="login-2">
        <h1><%= t "sessions.new.title" %></h1>
        <%= form_for resource, as: resource_name, url: session_path(resource_name) do |f| %>
          <div class="box_form clearfix">
            <div class="box_login">
              <%= link_to t("sessions.new.fb_login"), user_facebook_omniauth_authorize_path,
                class: "social_bt facebook" %>
              <%= link_to t("sessions.new.gg_login"), user_google_oauth2_omniauth_authorize_path,
                class: "social_bt google" %>
              <%= link_to t("sessions.new.lk_login"), "#", class: "social_bt linkedin" %>
            </div>
            <div class="box_login last">
              <div class="form-group">
                <%= f.email_field :email, autofocus: true, autocomplete: "email",
                  class: "form-control", placeholder: t("sessions.new.your_email")%>
              </div>
              <div class="form-group">
                <%= f.password_field :password, autocomplete: "off",
                  class: "form-control", placeholder: t("sessions.new.your_password") %>
              </div>
                <div class="form-group">
                  <%= f.label :remember_me, class: "inline" do%>
                    <%= f.check_box :remember_me %>
                    <strong><%= t "sessions.new.remember" %></strong>
                  <% end %>
                  <%= link_to t("sessions.new.forgot_password_html"),
                    new_password_reset_path, class: "forgot" %>
                </div>
              <div class="form-group">
                <%= f.submit t("sessions.new.login"), class: "btn_1" %>
              </div>
            </div>
          </div>
        <% end %>
        <p class="text-center link_bright"><%= t "sessions.new.no_account" %>
          <%= link_to t("sessions.new.register_now_html"),
            new_registration_path(resource_name) %>
        </p>
      </div>
    </div>
  </div>
</main>
