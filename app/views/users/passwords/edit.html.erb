<%= provide :title, t("reset_mail.title") %>
<main>
  <div class="bg_color_2">
    <div class="container margin_60_35">
      <div id="register">
        <h1><%= t "forgot_password.title" %></h1>
        <div class="row justify-content-center">
          <div class="col-md-5">
            <%= form_for resource, as: resource_name,
              url: password_path(resource_name), html: {method: :put} do |f| %>
              <%= f.hidden_field :reset_password_token %>
              <div class="box_form">
                <div class="form-group">
                  <%= f.label :password, t("forgot_password.password") %>
                  <%= f.password_field :password, class: "form-control",
                    placeholder: t("forgot_password.your_password"),
                    autofocus: true, autocomplete: "off" %>
                </div>
                <div class="form-group">
                  <%= f.label :password_confirmation,
                    t("forgot_password.password_confirm") %>
                  <%= f.password_field :password, class: "form-control",
                    placeholder: t("forgot_password.password_confirm"),
                    autocomplete: "off" %>
                </div>
                <div class="form-group text-center add_top_30">
                  <%= f.submit t("forgot_password.update"), class: "btn_1" %>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>
