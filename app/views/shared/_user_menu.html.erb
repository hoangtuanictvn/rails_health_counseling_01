<% if logged_in? %>
  <li class="submenu">
    <a href="#" class="show-submenu avatar_link">
      <%= image_tag user_avatar(@current_user), class: "user_menu--avatar" %>
    </a>
    <ul class="user_menu--custom">
      <div class="dropdown-caret right">
        <span class="caret-outer"></span>
        <span class="caret-inner"></span>
      </div>
      <li><%= link_to t(".profile"), @current_user %></li>
      <li><%= link_to t(".logout"), logout_url, method: :delete %></li>
    </ul>
  </li>
<% else %>
  <li class="submenu login_require">
    <%= link_to t("global.menu.login"), login_path %>
  </li>
<% end %>
