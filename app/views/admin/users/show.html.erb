<div>
  <h3><%= @user.name %></h3>
</div>
<div class="col-xl-12 col-lg-12">
  <div class="tabs_styled_2">
    <ul class="nav nav-tabs" role="tablist">
      <li class="nav-item">
        <%= link_to t("admin.users.question"), "#general",id: "general-tab",
          class: "nav-link active", "data-toggle": "tab", role: "tab",
          "aria-controls": "general", "aria-expanded": true %>
      </li>
      <li class="nav-item">
        <%= link_to t("admin.users.answer"), "#reviews",
          class: "nav-link",id: "reviews-tab",
          "data-toggle": "tab", role: "tab",
          "aria-controls": "reviews" %>
      </li>
    </ul>
    <div class="tab-content">
      <div class="tab-pane fade active show" id="general"
        role="tabpanel" aria-labelledby="general-tab">
        <div id="question-box" class="reviews-container">
          <% @questions.each do |question| %>
            <div id="question-<%= question.id %>">
              <%= render "admin/shared/item", object: question,
                delete_url: admin_question_path(question.id) %>
            </div>
          <% end %>
        </div>
        <%= link_to t("global.load_more"),
          admin_questions_path(page: Settings.default_load_more),
          id: "load-more-question", remote: true %>
      </div>
      <div class="tab-pane fade" id="reviews"
        role="tabpanel" aria-labelledby="reviews-tab">
        <div id="answer-box" class="reviews-container">
          <% @answers.each do |answer| %>
            <div id="answer-<%= answer.id %>">
              <%= render "admin/shared/item", object: answer,
                delete_url: admin_answer_path(answer.id) %>
            </div>
          <% end %>
        </div>
        <%= link_to t("global.load_more"),
          admin_answers_path(page: Settings.default_load_more),
          id: "load-more-answer", remote: true %>
      </div>
    </div>
  </div>
</div>
