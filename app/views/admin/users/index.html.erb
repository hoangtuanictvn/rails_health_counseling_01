<% provide :title, t("admin.users.title") %>
<div class="row">
  <div class="col-lg-12">
    <div class="card">
      <div class="card-header">
        <div class="row">
          <h4><%= t "admin.users.title" %></h4>
          <div class="form-group search-form">
            <form id="search-doctor" class="input-group">
              <input id="search-input" type="text"
                name="search-key" class="form-control"
                value="<%= params[:search] %>">
              <div class="input-group-append">
                <button
                  type="submit" class="btn btn-primary">
                  <i class="fa fa-search"></i>
                </button>
              </div>
            </form>
          </div>
        </div>
      </div>
      <div class="card-body">
        <div class="table-responsive">
          <table class="table table-hover">
           <thead>
              <tr>
                <th>#</th>
                <th><%= t "admin.users.name" %></th>
                <th><%= t "admin.users.join_date" %></th>
                <th><%= t "admin.users.status" %></th>
                <th><%= t "admin.doctors.action" %></th>
              </tr>
            </thead>
            <tbody>
              <% @users.each_with_index do |user, index| %>
                <tr class="doctor-item" data-url="<%=  %>">
                  <th scope="row"><%= index %></th>
                  <th><%= user.name %></th>
                  <th><%= user.created_at %></th>
                  <th><%= user.status %></th>
                  <th>
                    <%= link_to admin_user_path(user) do %>
                      <button class="btn btn-primary">
                        <%= t "admin.doctors.detail" %>
                      </button>
                    <% end %>
                  </th>
                  <th>
                    <%= render "admin/shared/block_form", user: user %>
                  </th>
                </tr>
              <% end %>
              <%= paginate @users %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
