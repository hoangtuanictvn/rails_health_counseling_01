<% if user.blocked? %>
  <%= form_for :block_users, url: admin_user_path(user.id), remote: true,
    html: {method: :patch} do |f| %>
    <div><%= hidden_field_tag :type, Settings.admin.unblock %></div>
    <%= f.submit t("admin.doctors.unblock"), class: "btn btn-success" %>
  <% end %>
<% else %>
  <%= form_for :block_users, url: admin_user_path(user.id), remote: true,
      html: {method: :patch} do |f| %>
    <div><%= hidden_field_tag :type, Settings.admin.block %></div>
    <%= f.submit t("admin.doctors.block"), class: "btn btn-danger" %>
  <% end %>
<% end %>
